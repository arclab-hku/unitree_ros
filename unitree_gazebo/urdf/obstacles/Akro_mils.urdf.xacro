<?xml version="1.0" encoding="utf-8"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">  
  <xacro:macro name="Akro_mils" params="handle parent position orientation">

  <joint name="Akro_mils_${handle}_joint" type="fixed">
    <origin xyz="${position}" rpy="${orientation}"/>
    <parent link="${parent}"/>
    <child link="Akro_mils_${handle}"/>
  </joint>

    <link
      name="Akro_mils_${handle}">
      
      <inertial>
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia
      ixx="1.0" ixy="0.0" ixz="0.0"
      iyy="1.0" iyz="0.0"
      izz="1.0"/>
      </inertial>
      
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://ICRA2023_Quadruped_Competition/meshes/Akro_mils.stl"/>
        </geometry>
        <material
          name="">
          <color
            rgba="1.0 0.41 0.41 1" />
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <box size="2.0955e-01 2.9885e-01 4.0000e-01" />
        </geometry>
        <material
          name="">
          <color
            rgba="1 0 0 1" />
        </material>
      </collision>
    </link>

    <gazebo reference="Akro_mils_${handle}">
      <material>Gazebo/RedBright</material>
      <static>true</static>
    </gazebo>

  </xacro:macro>
</robot>
