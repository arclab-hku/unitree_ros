<?xml version="1.0" encoding="utf-8"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">  
  <xacro:macro name="solid_wood_block" params="handle parent position orientation">

  <joint name="solid_wood_block_${handle}_joint" type="fixed">
    <origin xyz="${position}" rpy="${orientation}"/>
    <parent link="${parent}"/>
    <child link="solid_wood_block_${handle}"/>
  </joint>

    <link
      name="solid_wood_block_${handle}">
      
      <inertial>
        <origin xyz="0 0 0.5" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia
      ixx="1.0" ixy="0.0" ixz="0.0"
      iyy="1.0" iyz="0.0"
      izz="1.0"/>
      </inertial>
      
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://unitree_gazebo/meshes/solid_wood_block.stl"/>
        </geometry>
        <material
          name="wood">
        </material>
      </visual>
      <collision>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="package://unitree_gazebo/meshes/solid_wood_block.stl" />
        </geometry>
      </collision>
    </link>
  
    <gazebo reference="solid_wood_block_${handle}">
      <material>Gazebo/Wood</material>
    </gazebo>
    
  </xacro:macro>
</robot>
